                    <field name="need_update" invisible="1"/>
                    <button name="mark_need_update" string="Aggiornare schedulato" type="object" icon="terp-calendar" attrs="{'invisible': ['|',('wp_parent_template', '=', False),('need_update', '=', True)]}"/>
                    <button name="unmark_need_update" string="Annulla aggiorna schedulato" type="object" icon="gtk-cancel" attrs="{'invisible': ['|',('wp_parent_template', '=', False),('need_update', '=', False)]}"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_product_product_web_server_wp_sequence_tree">
            <field name="name">product.product.web.server.sequence.tree</field>
            <field name="model">product.product.web.server</field>
            <field name="priority" eval="40"/>
            <field name="arch" type="xml">
                <tree string="Imposta ordinamento" editable="bottom">
                    <field name="product_id" readonly="1"/>
                    <field name="wp_parent_template" invisible="1" />
                    <field name="wp_parent_id" readonly="1"/>
                    <field name="wp_sequence" />

                    <button name="publish_master_now" string="Pubblica master ora" type="object" icon="gtk-refresh" attrs="{'invisible': [('wp_parent_template', '=', False)]}"/>

                    <field name="need_update" invisible="1"/>
                    <button name="mark_need_update" string="Aggiornare schedulato" type="object" icon="terp-calendar" attrs="{'invisible': ['|',('wp_parent_template', '=', False),('need_update', '=', True)]}"/>
                    <button name="unmark_need_update" string="Annulla aggiorna schedulato" type="object" icon="gtk-cancel" attrs="{'invisible': ['|',('wp_parent_template', '=', False),('need_update', '=', False)]}"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_product_product_web_server_manual_stock_wp_tree">
            <field name="name">product.product.web.server.manual.stock.tree</field>
            <field name="model">product.product.web.server</field>
            <field name="priority" eval="40"/>
            <field name="arch" type="xml">
                <tree string="Imposta magazzino manuale" editable="bottom">
                    <field name="product_id" readonly="1"/>
                    <field name="wp_parent_template" invisible="1" />
                    <field name="wp_parent_id" readonly="1"/>
                    <field name="q_x_pack" readonly="1"/>
                    <field name="price_multi" readonly="1"/>

                    <!--<field name="mx_lord_mrp_qty" readonly="1"/>
                    <field name="mx_oc_out_prev" readonly="1"/>-->

                    <field name="force_min_stock" />

                    <field name="force_manual_stock" />
                    <field name="force_this_stock" />

                    <button name="publish_master_now" string="Pubblica master ora" type="object" icon="gtk-refresh" attrs="{'invisible': [('wp_parent_template', '=', False)]}"/>

                    <field name="need_update" invisible="1"/>
                    <button name="mark_need_update" string="Aggiornare schedulato" type="object" icon="terp-calendar" attrs="{'invisible': ['|',('wp_parent_template', '=', False),('need_update', '=', True)]}"/>
                    <button name="unmark_need_update" string="Annulla aggiorna schedulato" type="object" icon="gtk-cancel" attrs="{'invisible': ['|',('wp_parent_template', '=', False),('need_update', '=', False)]}"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_product_product_web_server_wp_full_detail_form">
            <field name="name">product.product.web.server.full.detail.form</field>
            <field name="model">product.product.web.server</field>
            <field name="priority" eval="40"/>
            <field name="arch" type="xml">
                <form string="Product" version="7.0">
                    <header>
                    </header>
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="connector_id" />
                            <field name="published" />

                            <field name="product_id" required="1"/>
                            <field name="wp_parent_code" />

                            <field name="brand_id" />

                            <notebook colspan="4">
                                <page string="Info">
                                    <group colspan="4" col="4">
                                        <field name="wp_type" groups="wp_connector.group_wp_product_manager"/>
                                        <field name="wp_parent_template" groups="wp_connector.group_wp_product_manager"/>

                                        <field name="wp_parent_id" groups="wp_connector.group_wp_product_manager" domain="[('connector_id','=',connector_id)]"/>
                                        <field name="wp_color_id" />

                                        <field name="wordpress_categ_ids" domain="[('connector_id','=',connector_id),('enabled','=',True)]" widget="many2many_tags" colspan="4"/>

                                        <field name="lst_price" />
                                        <field name="lifetime_warranty" />

                                        <field name="price_multi" />
                                        <field name="price_extra" />
                                    </group>
                                </page>
                                <page string="Material">
                                    <group colspan="4" col="4">
                                        <field name="material_ids" widget="many2many_tags"/>
                                    </group>
                                </page>
                                <page string="Package">
                                    <group colspan="4" col="4">
                                        <field name="model_package_id" />

                                        <separator string="Da anagrafica prodotto:" colspan="4" />
                                        <field name="product_q_x_pack" readonly="1"/>
                                        <field name="product_weight" readonly="1"/>
                                        <!--<field name="product_weight_net" />-->
                                    </group>
                                    <group colspan="4" col="4" attrs="{'invisible': [('wp_manual_volume', '=', True)]}">
                                        <field name="product_pack_l" readonly="1"/>
                                        <field name="product_pack_h" readonly="1"/>
                                        <field name="product_pack_p" readonly="1"/>
                                    </group>

                                    <group colspan="4" col="4" attrs="{'invisible': [('wp_manual_volume', '=', False)]}">
                                        <separator string="Dimensioni forzate per calcolo volume:" colspan="4" />
                                        <field name="manual_pack_l" />
                                        <field name="manual_pack_h" />
                                        <field name="manual_pack_p" />
                                    </group>
                                    <group colspan="4" col="4">
                                        <separator string="Preview del sito:" colspan="3" /><!--attrs="{'invisible': [('model_package_id','!=',False)]}"-->
                                        <button name="update_wp_volume" string="Refresh volume" type="object" colspan="1" />

                                        <field name="wp_manual_volume" />
                                        <field name="wp_volume" />

                                        <field name="q_x_pack" />
                                        <field name="weight" />
                                        <!--<field name="weight_net" />-->

                                        <field name="pack_l" />
                                        <field name="pack_h" />
                                        <field name="pack_p" />

                                        <field name="weight_aditional_info" colspan="4" nolabel="1"/>
                                    </group>
                                </page>
                                <page string="Forzature">
                                    <group colspan="4" col="4">
                                        <field name="force_name"/>
                                        <field name="force_ean13"/>

                                        <field name="force_description" colspan="4"/>

                                        <field name="force_manual_stock"/>
                                        <field name="force_this_stock"/>

                                        <field name="force_min_stock"/>
                                        <field name="force_q_x_pack"/>

                                        <field name="force_price"/>
                                        <field name="wp_web_pricelist"/>

                                        <field name="wp_web_discounted_net" />
                                        <field name="force_discounted"/>

                                    </group>
                                </page>
                                <page string="Magazzino manuale" attrs="{'invisible': [('force_manual_stock', '=', False)]}">
                                    <group colspan="4" col="4">
                                        <field name="stock_log_ids" colspan="4" nolabel="1" readonly="1">
                                            <tree string="Log">
                                                <field name="create_date"/>
                                                <field name="create_uid"/>
                                                <field name="old_qty"/>
                                                <field name="new_qty"/>
                                                <field name="name"/>
                                            </tree>
                                        </field>
                                    </group>
                                </page>
                                <page string="Amazon">
                                    <group colspan="4" col="4">
                                        <separator string="Bullet point 1" colspan="2"/>
                                        <separator string="Bullet point 2" colspan="2"/>
                                        <field name="bullet_point_1" colspan="2" nolabel="1"/>
                                        <field name="bullet_point_2" colspan="2" nolabel="1"/>
                                        <separator string="Bullet point 3" colspan="2"/>
                                        <separator string="Bullet point 4" colspan="2"/>
                                        <field name="bullet_point_3" colspan="2" nolabel="1"/>
                                        <field name="bullet_point_4" colspan="2" nolabel="1"/>
                                        <separator string="Bullet point 5" colspan="2"/>
                                        <newline />
                                        <field name="bullet_point_5" colspan="2" nolabel="1"/>
                                    </group>
                                </page>
                                <page string="Emozionali">
                                    <group colspan="4" col="4">
                                        <separator string="Emozionale breve" colspan="4"/>
                                        <field name="emotional_short_description" colspan="4" nolabel="1"/>
                                        <separator string="Emozionale lunga" colspan="4"/>
                                        <field name="emotional_description" colspan="4" nolabel="1"/>
                                    </group>
                                </page>
                            </notebook>

                            <separator string="Wordpress link:" colspan="4"/>
                            <field name="wp_it_id" readonly="1"/>
                            <field name="wp_en_id" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_product_product_web_server_wp_parent_form">
            <field name="name">product.product.web.server.parent.form</field>
            <field name="model">product.product.web.server</field>
            <field name="priority" eval="40"/>
            <field name="arch" type="xml">
                <form string="Product" version="7.0">
                    <header>
                        <!--<button name="publish_now" string="Publish now" type="object" />-->
                        <button name="link_variant_now" string="Collega tutti figli" type="object" />
                        <button name="open_permalink" string="Apri permalink" type="object"/><!-- attrs="{'invisible': [('permalink', '=', False)]}" icon="terp-go-home"/>-->
                        <field name="permalink" />

                    </header>
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="connector_id" readonly="1"/>
                            <newline/>

                            <field name="published" readonly="1"/>
                            <field name="wp_type" readonly="1"/>

                            <field name="product_id" readonly="1" />
                            <field name="wp_parent_code" />

                            <field name="wp_color_id" />
                            <newline/>

                            <field name="wordpress_categ_ids" domain="[('connector_id','=',connector_id),('enabled','=',True)]" widget="many2many_tags" colspan="4"/>

                            <!--<field name="force_name"/>
                            <field name="force_description"/>

                            <field name="force_q_x_pack"/>
                            <field name="force_ean13"/>

                            <field name="force_price"/>
                            <field name="force_min_stock"/>-->

                            <notebook colspan="4">
                                <page string="Variations:">
                                     <group colspan="4" col="4">
                                        <separator string="Wordpress line:" colspan="4"/>
                                        <!--<button name="clean_reference" string="Clean reference" colspan="1" type="object" confirm="Do you want delete reference with Wordpress linked product?"/>-->
                                        <field name="wp_default_choice_id" domain="[('wp_parent_id', '=', active_id), ('published', '=', True)]" widget="selection"/>
                                        <newline />
                                        <field name="variant_ids" colspan="4" nolabel="1" readonly="1">
                                            <tree string="Varianti" editable="bottom">
                                                <field name="published" />
                                                <field name="product_id" readonly="1" />
                                                <field name="force_q_x_pack" readonly="1"/>
                                                <field name="force_ean13" readonly="1"/>
                                                <field name="force_price" readonly="1"/>
                                                <button name="open_master_variant" string="Apri" type="object" />
                                            </tree>
                                        </field>
                                     </group>
                                </page>
                                <page string="Linked:">
                                     <group colspan="4" col="4">
                                         <separator string="Prodotti Cross sell:" colspan="4"/>
